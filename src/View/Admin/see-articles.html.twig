{% extends 'layout.html.twig' %}

{% block content %}

<div class="title btn btn-warning mb-4">

	!
	<a href="/admin/addArticles" class="text-decoration-none text-light ">Add some articles</a>
</div>


<table class="table  table-hover background-ws-dark">

	<thead>

		<tr class="title">
			<th scope="col">#id</th>
			<th scope="col">Title(click modified)</th>
			<th scope="col">Author</th>
			<th scope="col">Date</th>

		</tr>
	</thead>
	<tbody>
		{% for article in articles %}

			<tr class="text-light">
				<th scope="row">{{article.id}}</th>
				<td class="text-light">
					<a href="{{ ROOT_URL }}/admin/articles/show?id={{article.id}}" class="text-light text-decoration-none">


						{{article.title}}
					</a>
				</td>

				<td class="text-light">{{article.author}}</td>
				<td class="text-light">{{article.date}}</td>


			</tr>
		</td>
	</tbody>
</td></tbody></tr></td></tbody></tr>{% endfor %}</tbody></table>{% endblock %}
