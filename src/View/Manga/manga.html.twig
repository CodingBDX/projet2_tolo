{% extends "layout.html.twig" %}

{% block title %}
	{{parent()}}:Top Manga - List
{% endblock %}

{% block content %}

	<div class="background container-md mt-4">
		<div class="title container-fluid p-2">
			<h1 class="text-center mb-4 display-1">{{block('title')}}</h1>
		</div>
		<div class="row mx-auto">


			{% for i in 0..50 %}
				<div class="card w-15 mt-2 col-xl-2 col-md-3 col-sm-6">

					<a href="show?id={{result[i].malId}}">
						<img src="{{result[i].getImages}}" class="card-img-top mt-2" alt="..." style="height:15em">
					</a>

					<div class="card-body">
						<h5 class="card-title">{{result[i].getTitle}}</h5>
						<div class="d-flex flex-row bd-highlight align-items-center mb-3">


							<a href="#" class="btn btn-warning">
								{{(result[i].startDate) ? result[i].startDate : "not start"}}


							</a>
							<a href="#" class="btn btn-warning">
								{{(result[i].score) ? result[i].score : "not start"}}


							</a>
							<a href="#" class="btn btn-warning">
								{{(result[i].getVolumes) ? result[i].getVolumes : "not end"}}


							</a>


						</div>
					</div>


				</div>
			{% endfor %}
		</div>
	{% endblock %}
