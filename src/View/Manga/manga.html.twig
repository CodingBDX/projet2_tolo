{% extends "layout.html.twig" %}

{% block title %}
	{{parent()}}:Manga - List
{% endblock %}

{% block content %}
	{% include "_Component/_caroussel.html.twig" %}
	<div class="container-md mt-4">
		<div class="title container-fluid p-2">
			<h1 class="text-center mb-4 display-1">{{block('title')}}</h1>
		</div>
		<div class="row mx-auto">


			{% for i in 0..20 %}
				<div class="card w-15 mt-2 col-xl-2 col-md-3 col-sm-6">

					<a href="manga/show?id={{manga_list[i].malId}}">
						<img src="{{manga_list[i].getImages}}" class="card-img-top mt-2" alt="..." style="height:15em">
					</a>

					<div class="card-body">
						<h5 class="card-title">{{manga_list[i].getTitle}}</h5>
						<div class="d-flex flex-row bd-highlight align-items-center mb-3">


							<a href="#" class="btn btn-warning">
								{{(manga_list[i].startDate) ? manga_list[i].startDate : "not start"}}


							</a>

						</div>
					</div>


				</div>
			{% endfor %}
		</div>


	</div>
{% endblock %}
