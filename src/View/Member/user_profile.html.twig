{% extends "layout.html.twig" %}

{% block content %}

	{% if session.mail %}

		<div class="container-fluid row  mt-4 mb-4 p-3">


			<div class="card background-ws-dark p-4 col-12 col-md-6 col-xl-6">


				<div class="background-ws-light rounded p-2 image d-flex flex-column justify-content-center align-items-center">
					<button class="btn btn-secondary">
						<img src="https://i.imgur.com/wvxPV9S.png" class="rounded" height="100" width="100"/></button>
					<form action="/member/edit_profile?id={{user.id}}" method="post">
						<input type="text" class="d-flex mt-3 title background-ws-dark btn btn-warning" value="{{user.name}}" name="name" placeholder="{{user.name}}">

						<input type="text" class="d-flex mt-3 title background-ws-dark btn btn-warning" value="{{user.mail}}" name="mail" placeholder="{{user.mail}}">

						<input type="text" class="d-flex mt-3 title background-ws-dark btn btn-warning" value="{{user.password}}" name="password" placeholder="{{user.password}}">

						<input type="hidden" name="id" value="{{ user.id }}">


						<div class=" d-flex mt-2">
							<button class="btn btn-warning text-light" type="submit">Save Modified Profile</button>
						</div>
					</form>

					<div class=" px-2 rounded mt-4 date ">
						<span class="title">Joined
																																																																																																																																																																																																																																																																																																																																																																																																																																																																			at
							{{user.user_date|date("H:i")}}
							the
							{{user.user_date|date("Y M d")}}</span>


					</div>
				</div>
			</div>

			<div class="col-12 col-md-6 col-xl-6">
				<div class="container-md">

					<div class="row mx-auto">
						{% if user.isAdmin == true %}
							<h3 class="title text-center">administration</h3>

							<a href="/admin/all_users" class="d-flex row mx-auto">
								<p class="btn btn-warning my-2 text-light">Show all Profiles</p>
							</a>
							<a href="/articles/add" class="d-flex row mx-auto">
								<p class="btn btn-warning my-2 text-light">Create Article</p>
							</a>

							{% else %}

						{% endif %}

						<h3 class="title text-center">your favorite</h3>
						{% for i in 0..20 %}
							<div class="card w-15 mt-2 col-xl-2 col-md-3 col-sm-6">

								<a href="manga/show?id={{manga_list[i].malId}}">
									<img src="{{manga_list[i].getImages}}" class="card-img-top mt-2" alt="..." style="height:15em">
								</a>

								<div class="card-body">
									<h5 class="card-title">{{manga_list[i].getTitle}}</h5>
									<div class="d-flex flex-row bd-highlight align-items-center mb-3">


										<a href="#" class="btn btn-warning">
											{{(manga_list[i].startDate) ? manga_list[i].startDate : "not start"}}


										</a>

									</div>
								</div>


							</div>
						{% endfor %}
					</div>


				</div>

			</div>
		</div>


	{% else %}
		made fucker
	{% endif %}

{% endblock %}
