{
    "name": "wildcodeschool/simple-mvc",
    "description": "Simple from scratch PHP MVC for WildCodeSchool students",
    "authors": [
        {
            "name": "Aurelien",
            "email": "aurelien.barbier@wildcodeschool.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "twig/twig": "^3.1",
        "ext-pdo": "*",
        "jikan-me/jikan": "^4",
        "twbs/bootstrap": "^5.2",
        "froala/wysiwyg-editor-php-sdk": "^4.0",
        "jasongrimes/paginator": "~1.0",
        "silex/silex": "~1.1",
        "monolog/monolog": "~1.7",
        "symfony/twig-bridge": "^2.7",
        "phpunit/phpunit": "4.5.*"
    },
    "require-dev": {
        "filp/whoops": "^2.14",
        "phpmd/phpmd": "^2.12",
        "phpstan/phpstan": "^1.5",
        "squizlabs/php_codesniffer": "^3.6",
        "heroku/heroku-buildpack-php": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    }
}
